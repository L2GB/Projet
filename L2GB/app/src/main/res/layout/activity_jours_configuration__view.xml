<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.l2gb.applipfe.view.ConfigurationJour"
    android:weightSum="1">

    <TextView android:text="Configuration journée"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/config_s"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l1"
        android:layout_below="@+id/config_s"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView android:text="Nom du Jour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/config_s"
            android:id="@+id/name_s"
            android:textSize="15dp"/>

        <EditText android:id="@+id/edit_name_jour"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="nom"
            android:textSize="15dp"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:onClick="saveDisplay"
            android:text="sauvegarder"
            android:layout_marginLeft="30dp"
            android:id="@+id/save" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l2"
        android:layout_below="@+id/l1">

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="RetourJourConfig"
        android:text="Annuler"
        android:layout_marginLeft="30dp"
        android:layout_gravity="right"
        android:id="@+id/AnnulerConfigJour"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l3"
        android:layout_marginTop="10dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/l4"
        android:layout_marginTop="10dp">

        <TextView android:text="Créneaux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/Tcreneau"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:onClick="addCreneau"
            android:id="@+id/button7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supprimer"
            android:onClick="supprimerLigne"
            android:id="@+id/button14"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/l5">

        <TableLayout android:layout_height="wrap_content"
            android:id="@+id/tablelayoutId"
            android:layout_width="fill_parent">
            //android:background="#F87907"
            >

            <TableRow>

                <TextView android:id="@+id/l1r1"
                    android:text="N°       "
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    />

                <TextView android:id="@+id/l1r2"
                    android:text="Début     "
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView android:id="@+id/l1r3"
                    android:text="Fin       "
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/textView6"
                    android:text="Autorisation"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="3" />

            </TableRow>
        </TableLayout>

    </LinearLayout>



</LinearLayout>
